{
    //Integrate with External Tools via Tasks
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dssat-csm: Run DSSAT (without debugging)",
            "options": {
                "cwd": "c:/DSSAT47/Sunflower"
            },
            "args": [
                "A",
                "UCCO8101.SUX"
            ],
            "command": "${workspaceRoot}/build/bin/dscsm047.exe",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "dssat-csm: CMake DEBUG",
            "windows": {
                "args": [
                    "-G",
                    "MinGW Makefiles",
                    "-DCMAKE_BUILD_TYPE=DEBUG",
                    "${workspaceRoot}"
                ]
            },
            "osx": {
                "args": [
                    "-G",
                    "Unix Makefiles",
                    "-DCMAKE_BUILD_TYPE=DEBUG",
                    "${workspaceRoot}"
                ]
            },
            "linux": {
                "args": [
                    "-G",
                    "Unix Makefiles",
                    "-DCMAKE_BUILD_TYPE=DEBUG",
                    "${workspaceRoot}"
                ]
            },
            "command": "cmake",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "shell",
            "dependsOn": "dssat-csm: create build dir"
        },
        {
            "label": "dssat-csm: CMake RELEASE",
            "windows": {
                "args": [
                    "-G",
                    "MinGW Makefiles",
                    "-DCMAKE_BUILD_TYPE=RELEASE",
                    "${workspaceRoot}"
                ]
            },
            "osx": {
                "args": [
                    "-G",
                    "Unix Makefiles",
                    "-DCMAKE_BUILD_TYPE=RELEASE",
                    "${workspaceRoot}"
                ]
            },
            "linux": {
                "args": [
                    "-G",
                    "Unix Makefiles",
                    "-DCMAKE_BUILD_TYPE=RELEASE",
                    "${workspaceRoot}"
                ]
            },
            "command": "cmake",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "shell",
            "dependsOn": "dssat-csm: create build dir"
        },
        {
            "label": "dssat-csm: Build DEBUG",
            "windows": {
                "command": "mingw32-make.exe"
            },
            "osx": {
                "command": "make"
            },
            "linux": {
                "command": "make"
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "shell",
            "dependsOn": "dssat-csm: CMake DEBUG",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "dssat-csm: Build RELEASE",
            "windows": {
                "command": "mingw32-make.exe"
            },
            "osx": {
                "command": "make"
            },
            "linux": {
                "command": "make"
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "shell",
            "dependsOn": "dssat-csm: CMake RELEASE"
        },
        {
            "label": "dssat-csm: clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake -P distclean.cmake"
        },
        {
            "label": "dssat-csm: create build dir",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-E",
                "make_directory",
                "build"
            ]
        }
    ]
}